@model IEnumerable<PongStudiosPortal.Models.PortalLink>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <h1 class="my-4 text-center text-lg-left">Pong Studios Link Portal</h1>

    <div class="row text-center text-lg-left">
        @foreach (var item in Model)
        {
        <div class="col-lg-3 col-md-4 col-xs-6">
            <a href="@item.HttpLink" class="d-block mb-4 h-100">
                <img class="img-fluid img-thumbnail" src="@item.Image" alt="">
            </a>
            <center>
                <h2>@item.Text</h2>
            </center>
        </div>
        }
    </div>
</div>